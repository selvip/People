<h2 class="section-heading">Person Details</h2>
<hr class="light">
<p class="text-faded">
	<div class="table-responsive">
		<table class="table table-striped table-inverse">
			<thead>
		    <tr>
		      <th width="10%" class="bg-primary">ID</th>
		      <td width="30%"><%= @person.id %></td>
		    </tr>
	    </thead>
			<tr>
				<th width="10%" class="bg-primary">Name</th>
				<td><%= @person.name %></td>
			</tr>
			<tr>
				<th width="10%" class="bg-primary">Age</th>
				<td><%= @person.age %></td>
			</tr>
			<tr>
				<th width="10%" class="bg-primary">Money</th>
				<td><%= @person.money %></td>
			</tr>
		</table>
	</div>
</p>